<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-6 animate-slideDown opacity-100" 
     data-controller="autohide"
     data-autohide-delay-value="4000">
  <% if type.to_s == 'notice' %>
    <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg shadow-sm">
      <div class="flex items-start">
        <i class='bx bx-check-circle text-green-500 text-xl flex-shrink-0 mt-0.5'></i>
        <p class="ml-3 text-sm text-green-800"><%= message %></p>
        <button type="button" class="ml-auto text-green-500 hover:text-green-700 transition-colors" data-action="click->autohide#dismiss">
          <i class='bx bx-x text-xl'></i>
        </button>
      </div>
    </div>
  <% else %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg shadow-sm">
      <div class="flex items-start">
        <i class='bx bx-error-circle text-red-500 text-xl flex-shrink-0 mt-0.5'></i>
        <p class="ml-3 text-sm text-red-800"><%= message %></p>
        <button type="button" class="ml-auto text-red-500 hover:text-red-700 transition-colors" data-action="click->autohide#dismiss">
          <i class='bx bx-x text-xl'></i>
        </button>
      </div>
    </div>
  <% end %>
</div>
