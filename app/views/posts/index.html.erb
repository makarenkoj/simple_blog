<div class="min-h-screen bg-white">
  <!-- Medium-style Header -->
  <header class="border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-10 lg:py-12">
      <div class="max-w-3xl lg:max-w-none">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-3 leading-tight">
          <%= t('activerecord.attributes.posts.index.title') %>
        </h1>
        <p class="text-lg sm:text-xl text-slate-600 leading-relaxed max-w-3xl">
          <%= t('activerecord.attributes.posts.index.subtitle') %>
        </p>
      </div>
    </div>
  </header>
  <!-- Main Content with Sidebar -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex gap-12">
      <!-- Posts List (Left/Center Column) -->
      <div class="flex-1 max-w-3xl">
        <% if @posts.any? %>
          <div class="divide-y divide-slate-200">
            <%= render partial: 'posts/post', collection: @posts %>
          </div>
          <!-- Load More / Pagination -->
          <div class="mt-16 text-center">
            <button class="inline-flex items-center px-6 py-3 border border-slate-300 rounded-full text-sm font-medium text-slate-700 hover:bg-slate-50 transition-colors duration-200">
              <%= t('load_more', default: 'Завантажити більше') %>
            </button>
          </div>
        <% else %>
          <!-- Empty State (Medium-style) -->
          <div class="max-w-2xl mx-auto text-center py-20">
            <div class="mb-8">
              <svg class="w-20 h-20 mx-auto text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-serif font-bold text-slate-900 mb-3">
              <%= t('activerecord.attributes.posts.index.no_posts', default: 'Постів поки немає') %>
            </h3>
            <p class="text-lg text-slate-600 mb-8">
              <%= t('activerecord.attributes.posts.index.create_one', default: 'Будьте першим, хто створить пост!') %>
            </p>
            <% if current_user&.creator? %>
              <%= link_to new_post_path, class: 'inline-flex items-center px-6 py-3 bg-slate-900 text-white font-medium rounded-full hover:bg-slate-800 transition-colors duration-200' do %>
                <%= t('activerecord.attributes.posts.index.new_post', default: 'Створити пост') %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <!-- Sidebar (Right Column - Hidden on smaller screens) -->
      <aside class="hidden lg:!block w-80 flex-shrink-0">
        <div class="sticky top-20">
          <!-- Trending Topics -->
          <div class="bg-white border border-slate-200 rounded-lg p-6 mb-6">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-4">
              <%= t('activerecord.attributes.categories.popular') %>
            </h3>
            <div class="space-y-4">
              <% @categories.each_with_index do |category, index| %>
                <div class="group cursor-pointer">
                  <div class="flex items-baseline space-x-3">
                    <span class="text-xs font-medium text-slate-400"><%= (index + 1).to_s.rjust(2, '0') %></span>
                    <div>
                      <h4 class="text-sm font-semibold text-slate-900 group-hover:underline">
                        <%= category.name %>
                      </h4>
                      <p class="text-xs text-slate-500 mt-0.5">
                        <%= category.posts.count %> <%= t('activerecord.attributes.posts.index.posts') %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Who to follow -->
          <div class="bg-white border border-slate-200 rounded-lg p-6">
            <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-4">
              <%= t('who_to_follow', default: 'На кого підписатися') %>
            </h3>
            <div class="space-y-4">
              <% 3.times do |i| %>
                <div class="flex items-center space-x-3 group cursor-pointer">
                  <div class="w-10 h-10 rounded-full bg-slate-900 flex items-center justify-center text-white font-semibold flex-shrink-0">
                    U<%= i + 1 %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-semibold text-slate-900 group-hover:underline truncate">
                      User <%= i + 1 %>
                    </p>
                    <p class="text-xs text-slate-500 truncate">
                      <%= rand(500..5000) %> <%= t('followers', default: 'підписників') %>
                    </p>
                  </div>
                  <button class="px-3 py-1 border border-slate-900 rounded-full text-xs font-medium text-slate-900 hover:bg-slate-900 hover:text-white transition-colors duration-200">
                    <%= t('follow', default: 'Підписатися') %>
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
