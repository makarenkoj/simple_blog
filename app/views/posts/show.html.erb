    <% if @post.user.present? %>
      <div class="px-6 sm:px-8 pb-16">
        <%= link_to user_path(@post.user), class: "flex items-start space-x-4 p-6 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors duration-200 group" do %>
          <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar.representation(resize_to_limit: [80, 80]),
                class: "w-20 h-20 rounded-full object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-20 h-20 rounded-full bg-slate-900 flex items-center justify-center text-white font-bold text-2xl flex-shrink-0">
              <%= @post.user.username&.first&.upcase || '?' %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <p class="text-base font-semibold text-slate-900 mb-1 group-hover:underline">
              <%= @post.user.username %>
            </p>
            <p class="text-sm text-slate-600 leading-relaxed">
              <%= t('author_bio_placeholder', default: 'Автор цікавих історій та ідей. Пише про технології, культуру та життя.') %>
            </p>
            <div class="flex items-center space-x-4 mt-3">
              <span class="text-xs text-slate-500">1.2k <%= t('followers', default: 'підписників') %></span>
              <span class="text-xs text-slate-500">· 42 <%= t('posts', default: 'постів') %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <% if current_user_can_edit?(@post) %>
      <div class="px-6 sm:px-8 pb-16">
        <div class="p-6 bg-amber-50 border border-amber-200 rounded-lg">
          <div class="flex items-start space-x-3 mb-4">
            <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-sm font-semibold text-amber-900 mb-1">
                <%= t('admin_mode', default: 'Режим адміністратора') %>
              </h3>
              <p class="text-sm text-amber-700 mb-4">
                <%= t('admin_mode_desc', default: 'Ви можете редагувати або видалити цю публікацію') %>
              </p>
              <div class="flex flex-wrap gap-3">
                <%= link_to edit_post_path(@post), class: 'inline-flex items-center px-4 py-2 bg-white border border-amber-300 rounded-md text-sm font-medium text-amber-900 hover:bg-amber-100 transition-colors duration-200' do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t('edit', default: 'Редагувати') %>
                <% end %>
                <%= link_to post_path(@post), data: { turbo_confirm: t('activerecord.post.destroy_confirm', default: 'Ви впевнені?'), turbo_method: :delete }, class: 'inline-flex items-center px-4 py-2 bg-white border border-red-300 rounded-md text-sm font-medium text-red-900 hover:bg-red-50 transition-colors duration-200' do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t('delete', default: 'Видалити') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </article>
  <div class="border-t border-slate-200 bg-slate-50">
    <div class="mx-auto py-16" style="max-width: 1200px;">
      <div class="px-6 sm:px-8">
        <h2 class="text-2xl font-bold text-slate-900 mb-8">
          <%= t('activerecord.attributes.posts.more_from_author', author: @post.user&.username) %>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @post.user.posts.where.not(id: @post.id).order("RANDOM()").limit(3).each do |post| %>
            <%= link_to post_path(post), class: "group cursor-pointer block" do %>
              <div class="aspect-video bg-slate-200 rounded-lg mb-4 overflow-hidden relative">
                <% if post.cover_image.attached? %>
                  <%= image_tag post.cover_image.variant(resize_to_fill: [400, 225]), 
                      class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
                      loading: "lazy" %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                    <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <h3 class="font-bold text-slate-900 mb-2 group-hover:underline line-clamp-2 leading-tight">
                <%= post.title %>
              </h3>
              <p class="text-sm text-slate-600 mb-3 line-clamp-2">
                <% if post.body.present? %>
                  <%= truncate(post.body.to_plain_text, length: 120) %>
                <% end %>
              </p>
              <div class="flex items-center text-xs text-slate-500 space-x-2">
                <span><%= (post.body.to_plain_text.split.size / 200.0).ceil %> <%= t('min_read', default: 'хв') %></span>
                <span>·</span>
                <time datetime="<%= post.created_at.iso8601 %>">
                  <%= l(post.created_at, format: :short) %>
                </time>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
