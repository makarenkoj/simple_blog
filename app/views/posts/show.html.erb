    </header>
    <% if @post.cover_image.attached? %>
      <figure class="mb-12">
        <%= image_tag @post.cover_image.representation(resize_to_limit: [1400, 800]),
            class: "w-full h-auto",
            alt: @post.title %>
      </figure>
    <% end %>
    <div class="px-6 sm:px-8 pb-16">
      <div class="prose prose-lg max-w-none medium-prose">
        <%= @post.body %>
      </div>
    </div>
    <% if @post.categories.any? %>
      <div class="px-6 sm:px-8 pb-8">
        <div class="flex flex-wrap gap-2">
          <% @post.categories.each do |category| %>
            <%= link_to '#', class: "px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-full text-sm font-medium transition-colors duration-200" do %>
              <%= category.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <!-- Bottom Interaction Bar -->
