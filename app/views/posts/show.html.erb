<div class="min-h-screen bg-white">
  
  <!-- Top Navigation Bar (Medium style) -->
  <nav class="sticky top-0 z-50 bg-white border-b border-slate-200 backdrop-blur-sm bg-white/95">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Back Button -->
        <%= link_to posts_path, class: "flex items-center space-x-2 text-slate-600 hover:text-slate-900 transition-colors duration-200 group" do %>
          <svg class="w-5 h-5 group-hover:-translate-x-0.5 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <span class="hidden sm:inline font-medium"><%= t('activerecord.post.back', default: 'Назад') %></span>
        <% end %>

        <!-- Actions -->
        <div class="flex items-center space-x-3">
          <% if current_user_can_edit?(@post) %>
            <%= link_to edit_post_path(@post), class: "px-4 py-2 text-sm font-medium text-slate-700 hover:text-slate-900 transition-colors duration-200" do %>
              <%= t('edit', default: 'Редагувати') %>
            <% end %>
          <% end %>
          
          <!-- Share Button -->
          <button class="p-2 text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-full transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
          </button>
          
          <!-- More Options -->
          <button class="p-2 text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-full transition-all duration-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Article Container -->
  <article class="mx-auto" style="max-width: 680px;">
    
    <!-- Title Section -->
    <header class="px-6 sm:px-8 pt-12 sm:pt-16 pb-8">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-slate-900 leading-tight mb-8 tracking-tight">
        <%= @post.title %>
      </h1>

      <!-- Author Section -->
      <div class="flex items-center justify-between flex-wrap gap-4">
        <% if @post.user.present? %>
          <%= link_to user_path(@post.user), class: "flex items-center space-x-3 group" do %>
            <% if @post.user.avatar.attached? %>
              <%= image_tag @post.user.avatar.representation(resize_to_limit: [48, 48]),
                  class: "w-12 h-12 rounded-full object-cover" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center text-white font-semibold">
                <%= @post.user.username&.first&.upcase || '?' %>
              </div>
            <% end %>
            
            <div>
              <p class="text-sm font-medium text-slate-900 group-hover:underline">
                <%= @post.user.username %>
              </p>
              <div class="flex items-center text-sm text-slate-600 space-x-2">
                <time datetime="<%= @post.created_at.iso8601 %>">
                  <%= l @post.created_at, format: :long %>
                </time>
                <span>·</span>
                <span><%= @post.body.to_plain_text.split.size / 200 %> min read</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Interaction Bar (Medium style) -->
      <div class="flex items-center justify-between pt-8 mt-8 border-t border-slate-200">
        <div class="flex items-center space-x-6">
          <!-- Claps/Likes -->
          <button class="flex items-center space-x-2 text-slate-600 hover:text-slate-900 transition-colors duration-200 group">
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
            </svg>
            <span class="text-sm font-medium">51</span>
          </button>

          <!-- Comments -->
          <button class="flex items-center space-x-2 text-slate-600 hover:text-slate-900 transition-colors duration-200 group">
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <span class="text-sm font-medium">9</span>
          </button>
        </div>

        <div class="flex items-center space-x-4">
          <!-- Bookmark -->
          <button class="text-slate-600 hover:text-slate-900 transition-colors duration-200">
            <svg class="w-6 h-6 hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
            </svg>
          </button>

          <!-- Listen -->
          <button class="text-slate-600 hover:text-slate-900 transition-colors duration-200">
            <svg class="w-6 h-6 hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
            </svg>
          </button>
        </div>
      </div>
    </header>

    <!-- Cover Image (if exists) -->
    <% if @post.cover_image.attached? %>
      <figure class="mb-12">
        <%= image_tag @post.cover_image.representation(resize_to_limit: [1400, 800]),
            class: "w-full h-auto",
            alt: @post.title %>
      </figure>
    <% end %>

    <!-- Article Body -->
    <div class="px-6 sm:px-8 pb-16">
      <div class="prose prose-lg max-w-none medium-prose">
        <%= @post.body %>
      </div>
    </div>

    <!-- Tags Section -->
    <% if @post.categories.any? %>
      <div class="px-6 sm:px-8 pb-8">
        <div class="flex flex-wrap gap-2">
          <% @post.categories.each do |category| %>
            <%= link_to '#', class: "px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-full text-sm font-medium transition-colors duration-200" do %>
              <%= category.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Bottom Interaction Bar -->
    <div class="px-6 sm:px-8 pb-12">
      <div class="flex items-center justify-between py-8 border-y border-slate-200">
        <div class="flex items-center space-x-6">
          <button class="flex items-center space-x-2 text-slate-600 hover:text-slate-900 transition-colors duration-200 group">
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
            </svg>
            <span class="text-sm font-medium">51</span>
          </button>

          <button class="flex items-center space-x-2 text-slate-600 hover:text-slate-900 transition-colors duration-200 group">
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <span class="text-sm font-medium">9</span>
          </button>
        </div>

        <div class="flex items-center space-x-4">
          <button class="text-slate-600 hover:text-slate-900 transition-colors duration-200">
            <svg class="w-6 h-6 hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
            </svg>
          </button>

          <button class="text-slate-600 hover:text-slate-900 transition-colors duration-200">
            <svg class="w-6 h-6 hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Author Bio Section -->
    <% if @post.user.present? %>
      <div class="px-6 sm:px-8 pb-16">
        <%= link_to user_path(@post.user), class: "flex items-start space-x-4 p-6 border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors duration-200 group" do %>
          <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar.representation(resize_to_limit: [80, 80]),
                class: "w-20 h-20 rounded-full object-cover flex-shrink-0" %>
          <% else %>
            <div class="w-20 h-20 rounded-full bg-slate-900 flex items-center justify-center text-white font-bold text-2xl flex-shrink-0">
              <%= @post.user.username&.first&.upcase || '?' %>
            </div>
          <% end %>
          
          <div class="flex-1 min-w-0">
            <p class="text-base font-semibold text-slate-900 mb-1 group-hover:underline">
              <%= @post.user.username %>
            </p>
            <p class="text-sm text-slate-600 leading-relaxed">
              <%= t('author_bio_placeholder', default: 'Автор цікавих історій та ідей. Пише про технології, культуру та життя.') %>
            </p>
            <div class="flex items-center space-x-4 mt-3">
              <span class="text-xs text-slate-500">1.2k <%= t('followers', default: 'підписників') %></span>
              <span class="text-xs text-slate-500">· 42 <%= t('posts', default: 'постів') %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Admin Actions (if applicable) -->
    <% if current_user_can_edit?(@post) %>
      <div class="px-6 sm:px-8 pb-16">
        <div class="p-6 bg-amber-50 border border-amber-200 rounded-lg">
          <div class="flex items-start space-x-3 mb-4">
            <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-sm font-semibold text-amber-900 mb-1">
                <%= t('admin_mode', default: 'Режим адміністратора') %>
              </h3>
              <p class="text-sm text-amber-700 mb-4">
                <%= t('admin_mode_desc', default: 'Ви можете редагувати або видалити цю публікацію') %>
              </p>
              <div class="flex flex-wrap gap-3">
                <%= link_to edit_post_path(@post), class: 'inline-flex items-center px-4 py-2 bg-white border border-amber-300 rounded-md text-sm font-medium text-amber-900 hover:bg-amber-100 transition-colors duration-200' do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t('edit', default: 'Редагувати') %>
                <% end %>

                <%= link_to post_path(@post), data: { turbo_confirm: t('activerecord.post.destroy_confirm', default: 'Ви впевнені?'), turbo_method: :delete }, class: 'inline-flex items-center px-4 py-2 bg-white border border-red-300 rounded-md text-sm font-medium text-red-900 hover:bg-red-50 transition-colors duration-200' do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t('delete', default: 'Видалити') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </article>

  <!-- More from author section -->
  <div class="border-t border-slate-200 bg-slate-50">
    <div class="mx-auto py-16" style="max-width: 1200px;">
      <div class="px-6 sm:px-8">
        <h2 class="text-2xl font-bold text-slate-900 mb-8">
          <%= t('more_from', default: 'Більше від') %> <%= @post.user&.username || t('author', default: 'автора') %>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Placeholder for more posts -->
          <% 3.times do %>
            <article class="group cursor-pointer">
              <div class="aspect-video bg-slate-200 rounded-lg mb-4 overflow-hidden">
                <div class="w-full h-full bg-gradient-to-br from-slate-300 to-slate-400"></div>
              </div>
              <h3 class="font-bold text-slate-900 mb-2 group-hover:underline line-clamp-2">
                <%= t('related_post_title', default: 'Ще одна цікава стаття') %>
              </h3>
              <p class="text-sm text-slate-600 mb-3 line-clamp-2">
                <%= t('related_post_excerpt', default: 'Короткий опис публікації, що зацікавить читача...') %>
              </p>
              <div class="flex items-center text-xs text-slate-500 space-x-2">
                <span><%= t('5_min_read', default: '5 хв читання') %></span>
                <span>·</span>
                <span><%= l(Time.current, format: :short) %></span> // TODO: Replace with actual post date
              </div>
            </article>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
