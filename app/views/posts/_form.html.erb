<%= form_for(@post) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @post} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: '20' %>
  </div>

  <div class="actions">
    <%= f.submit t('activerecord.post.save'), class: 'btn btn-primary' %>
    <%= t('activerecord.post.or') %>
    <%= link_to t('activerecord.post.back'), :back %>
  </div>
<% end %>
