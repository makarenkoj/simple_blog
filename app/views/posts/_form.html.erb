<div class="max-w-xl mx-auto p-6 bg-white shadow-lg rounded-xl mt-8 mb-8">
  <%= simple_form_for @post, html: { class: "space-y-6" } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs space-y-4">
      <div class="form-group">
        <%= f.input :title,
                    input_html: {
                      class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    },
                    label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
      <div class="form-group">
        <%= f.input :body,
                    as: :text,
                    input_html: {
                      rows: 10,
                      class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    },
                    label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
      </div>
    </div>

    <div class="form-actions mt-8 flex justify-end space-x-4">
      <%= f.button :submit, t('activerecord.post.save', default: 'Save'),
                  class: 'inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-gray-900 bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200' %>

      <span class="text-gray-600 self-center"><%= t('activerecord.post.or', default: 'or') %></span>

      <%= link_to t('activerecord.post.back', default: 'Back'), :back,
                  class: 'inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200' %>
    </div>
  <% end %>
</div>
