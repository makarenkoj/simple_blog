<%= turbo_frame_tag "category_pref_#{category.id}" do %>
  <% if user_signed_in? %>
    <% if current_user.preferred_categories.exists?(category.id) %>
      <%= button_to category_preference_path(category), method: :delete, class: "p-1.5 text-blue-600 bg-blue-50 hover:bg-red-50 hover:text-red-600 rounded-full transition-colors duration-200", title: "Відписатися від категорії" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      <% end %>
    <% else %>
      <%= button_to category_preference_path(category), method: :post, class: "p-1.5 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-full transition-colors duration-200", title: "Стежити за категорією" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
