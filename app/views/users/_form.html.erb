<%= simple_form_for @user, html: {multipart: true}, wrappers: :horizontal_multi_select do |f| %>

  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.input :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.button :submit, t('activerecord.attributes.user.save'), class: 'btn btn-primary' %>
    <%= t('activerecord.attributes.user.or') %>
    <%= link_to t('activerecord.attributes.user.back'), :back, class: 'btn btn-primary' %>
  </div>
<% end %>
