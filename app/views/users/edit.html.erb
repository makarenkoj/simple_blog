<div class="min-h-screen bg-white">
  
  <!-- Header -->
  <div class="border-b border-slate-200">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
      <div class="flex items-center space-x-4 mb-2">
        <%= link_to user_path(current_user), class: "text-slate-600 hover:text-slate-900 transition-colors duration-200" do %>
          <i class="ri-arrow-left-line text-2xl"></i>
        <% end %>
        <h1 class="text-3xl sm:text-4xl font-serif font-bold text-slate-900">
          <%= t('activerecord.attributes.user.edit_profile', default: 'Редагувати профіль')%>
        </h1>
      </div>
      <p class="text-slate-600 ml-14">
        <%= t('edit_profile_description', default: 'Оновіть свою інформацію та налаштування') %>
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Profile Form Card -->
    <div class="bg-white border border-slate-200 rounded-lg overflow-hidden mb-8">
      <div class="p-6 sm:p-8">
        <%= render 'form' %>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="bg-white border-2 border-red-200 rounded-lg overflow-hidden">
      <div class="bg-red-50 px-6 py-4 border-b border-red-200">
        <div class="flex items-center space-x-3">
          <i class='bx bx-error-circle text-red-600 text-2xl'></i>
          <h2 class="text-lg font-bold text-red-900">
            <%= t('danger_zone', default: 'Небезпечна зона') %>
          </h2>
        </div>
      </div>
      <div class="p-6 sm:p-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="flex-1">
            <h3 class="text-base font-semibold text-slate-900 mb-1">
              <%= t('change_password', default: 'Змінити пароль') %>
            </h3>
            <p class="text-sm text-slate-600">
              <%= t('change_password_description', default: 'Оновіть свій пароль для безпеки облікового запису') %>
            </p>
          </div>
          <%= link_to edit_user_registration_path, class: "inline-flex items-center justify-center px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-700 hover:bg-slate-50 transition-colors duration-200" do %>
            <i class='bx bx-lock text-lg mr-2'></i>
            <%= t('change_password', default: 'Змінити пароль') %>
          <% end %>
        </div>

        <div class="border-t border-slate-200 my-6"></div>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="flex-1">
            <h3 class="text-base font-semibold text-red-900 mb-1">
              <%= t('delete_account', default: 'Видалити обліковий запис') %>
            </h3>
            <p class="text-sm text-slate-600">
              <%= t('delete_account_warning', default: 'Після видалення ваші дані не можна буде відновити') %>
            </p>
          </div>
          <%= link_to current_user, data: { turbo_method: :delete, turbo_confirm: t('confirm_delete_account', default: 'Ви абсолютно впевнені? Це незворотна дія!') }, class: "inline-flex items-center justify-center px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-medium hover:bg-red-700 transition-colors duration-200" do %>
            <i class='bx bx-trash text-lg mr-2'></i>
            <%= t('delete_account', default: 'Видалити обліковий запис') %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>
