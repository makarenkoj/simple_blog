<div class="max-w-md mx-auto mt-12 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold text-gray-800 mb-4 text-center">
    <%= t('activerecord.attributes.user.sign_up', default: "Sign up") %>
  </h2>

  <% if flash.any? %>
    <div class="mb-4 space-y-2">
      <% flash.each do |key, value| %>
        <div class="rounded-lg p-4 text-sm <%= flash_class(key) %>" role="alert">
          <%= value %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification class: "bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center text-sm" %>

    <div class="form-inputs space-y-4">

      <%= f.input :role,
        collection: User.roles.keys.map { |r| [I18n.t("activerecord.attributes.user.roles.#{r}", default: r.humanize), r] },
        prompt: t('select_role', default: "Select role"),
        label: t('activerecord.attributes.user.role'),
        input_html: {
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md bg-white focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :first_name,
        label: t('activerecord.attributes.user.first_name'),
        input_html: {
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :last_name,
        label: t('activerecord.attributes.user.last_name'),
        input_html: {
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :username,
        label: t('activerecord.attributes.user.username'),
        input_html: {
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :email,
        required: false,
        autofocus: true,
        label: t('activerecord.attributes.user.email'),
        input_html: {
          autocomplete: "email",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :password,
        required: false,
        label: t('activerecord.attributes.user.password'),
        input_html: {
          autocomplete: "new-password",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>

      <%= f.input :password_confirmation,
        required: true,
        label: t('activerecord.attributes.user.password_confirmation'),
        input_html: {
          autocomplete: "new-password",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-3 focus:ring-blue-500"
        } %>
    </div>

    <div class="form-actions mt-6">
      <%= f.button :submit, t('activerecord.attributes.user.sign_up'), class: 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-gray-900 bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% end %>

  <div class="mt-8 text-center text-sm text-gray-600 space-y-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
