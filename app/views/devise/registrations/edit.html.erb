<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-6 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8 animate-fadeIn">
      <h1 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent mb-2">
        <%= t('activerecord.attributes.user.edit_profile') %>
      </h1>
      <p class="text-slate-600 text-sm sm:text-base">
        <%= t('activerecord.attributes.user.update_your_information') %>
      </p>
    </div>
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100 animate-slideUp">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-profile', data: { turbo: "false" } }) do |f| %>
        <% if f.object.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 m-6 rounded-r-lg animate-shake">
            <div class="flex items-start">
              <div class="flex-1">
                <h3 class="text-sm font-semibold text-red-800 mb-1"><%= t('errors.messages.not_saved', count: resource.errors.count, resource: resource.class.model_name.human.downcase) %></h3>
                <ul class="text-sm text-red-700 space-y-1">
                  <% f.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        <div class="px-6 sm:px-8 lg:px-10 py-8">
          <div class="mb-10">
            <div class="flex flex-col items-center text-center space-y-4">
              <div class="w-full">
                  <%= f.label :avatar, class: "block text-sm font-semibold text-slate-700 mb-2" %>
                  <label class="relative flex items-center justify-center w-full px-4 py-3 border-2 border-dashed border-slate-300 rounded-xl cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition-all duration-300 group">
                    <%= f.file_field :avatar, class: "hidden", accept: "image/*" %>
                    <div class="flex items-center space-x-2 text-slate-600 group-hover:text-blue-600 transition-colors duration-300">
                      <span class="text-sm font-medium"><%= t('buttons.choose_file') %></span>
                    </div>
                  </label>
              </div>
            </div>
          </div>
          <div class="space-y-5">
            <div class="form-field-wrapper">
              <%= f.label :username, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
              <%= f.input_field :username, required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400" %>
            </div>
            <div class="form-field-wrapper">
              <%= f.label :email, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
              <%= f.input_field :email, required: true, type: :email, class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400" %>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div class="form-field-wrapper">
                <%= f.label :first_name, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :first_name, required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400" %>
              </div>
              <div class="form-field-wrapper">
                <%= f.label :last_name, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :last_name, required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400" %>
              </div>
            </div>
            <div class="form-field-wrapper">
              <label class="block text-sm font-semibold text-slate-700 mb-3">
                <%= t('activerecord.attributes.user.preferred_categories') %>
              </label>
              <div class="bg-slate-50 rounded-xl p-4 border border-slate-200">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <% Category.all.order(:name).each do |category| %>
                    <label class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white transition-colors duration-200 cursor-pointer group">
                      <%= check_box_tag 'user[preferred_category_ids][]', category.id, @user.preferred_category_ids.include?(category.id), class: "w-5 h-5 text-blue-600 border-slate-300 rounded focus:ring-2 focus:ring-blue-500 transition-all duration-200 cursor-pointer" %>
                      <span class="text-sm text-slate-700 font-medium group-hover:text-blue-600 transition-colors duration-200"><%= category.name %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="pt-6 border-t border-slate-200 space-y-5">
              <h3 class="text-lg font-bold text-slate-800 flex items-center">
                  <%= t('activerecord.attributes.user.change_password') %>
              </h3>
              <div class="form-field-wrapper">
                <%= f.input_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400", placeholder: "••••••••" %>
              </div>
              <div class="form-field-wrapper">
                <%= f.input_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400", placeholder: "••••••••" %>
              </div>
              <div class="form-field-wrapper">
                <%= f.label :current_password, class: "block text-sm font-semibold text-slate-700 mb-1.5" do %>
                  <%= t('activerecord.attributes.user.current_password') %> <span class="text-red-500">*</span>
                <% end %>
                <%= f.input_field :current_password, required: true, autocomplete: "current-password", class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400", placeholder: "••••••••" %>
              </div>
            </div>
          </div>
          <div class="mt-8 pt-6 border-t border-slate-200 space-y-4">
            <button type="submit" class="w-full group relative flex items-center justify-center py-3.5 px-6 border-2 border-transparent rounded-xl font-semibold bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300">
              <span><%= t("simple_form.button.update") %></span>
            </button>
          </div>
        </div>
      <% end %>
      <div class="px-6 sm:px-8 lg:px-10 pb-8 -mt-4"> 
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to :back, class: "flex-1 flex items-center justify-center py-3.5 px-6 border-2 border-slate-300 rounded-xl text-slate-700 font-semibold bg-white hover:bg-slate-50 hover:border-slate-400 hover:text-slate-900 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-300" do %>
            <span><%= t("simple_form.button.back") %></span>
          <% end %>
          <%= button_to registration_path(resource_name),
              method: :delete,
              data: { turbo: "false"},
              onclick: "return confirm('#{t("simple_form.labels.defaults.confirm")}')",
              class: "w-full flex-1 flex items-center justify-center py-3.5 px-6 border-2 border-red-200 rounded-xl text-red-600 font-semibold bg-white hover:bg-red-50 hover:border-red-500 hover:text-red-700 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-300" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                <span><%= t("simple_form.labels.defaults.cancel") %></span>
              <% end %>
        </div>
      </div>
    </div>
    <p class="text-center text-sm text-slate-500 mt-6">
      <%= t('activerecord.attributes.user.secure_notice') %>
    </p>
  </div>
</div>
