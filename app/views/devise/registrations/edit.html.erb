<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-6 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8 animate-fadeIn">
      <h1 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent mb-2">
        <%= t('activerecord.attributes.user.edit_profile') %>
      </h1>
      <p class="text-slate-600 text-sm sm:text-base">
        <%= t('activerecord.attributes.user.update_your_information', default: 'Оновіть свою інформацію') %>
      </p>
    </div>
    <!-- Main Form Card -->
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100 animate-slideUp">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-profile' }) do |f| %>
        <!-- Error Notification -->
        <% if f.object.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 m-6 rounded-r-lg animate-shake">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="flex-1">
                <h3 class="text-sm font-semibold text-red-800 mb-1"><%= t('errors.messages.not_saved', default: 'Виникли помилки') %></h3>
                <ul class="text-sm text-red-700 space-y-1">
                  <% f.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        <div class="px-6 sm:px-8 lg:px-10 py-8">
          <!-- Avatar Section -->
          <div class="mb-10">
            <div class="flex flex-col items-center text-center space-y-4">
              <div class="relative group">
                <% if f.object.avatar.attached? && f.object.avatar.persisted? %>
                  <%= image_tag f.object.avatar.representation(resize_to_limit: [150, 150]), 
                      class: "w-28 h-28 sm:w-32 sm:h-32 rounded-full object-cover shadow-lg ring-4 ring-blue-100 group-hover:ring-blue-200 transition-all duration-300" %>
                <% else %>
                  <div class="w-28 h-28 sm:w-32 sm:h-32 rounded-full bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center shadow-lg ring-4 ring-blue-100 group-hover:ring-blue-200 transition-all duration-300">
                    <span class="text-white text-4xl sm:text-5xl font-bold">
                      <%= f.object.username&.first&.upcase || '?' %>
                    </span>
                  </div>
                <% end %>
                <div class="absolute inset-0 rounded-full bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                  <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    </svg>
                </div>
              </div>
              <% if f.object.avatar.attached? %>
                <%= link_to delete_avatar_user_path(f.object),
                            data: { turbo_method: :delete, turbo_confirm: t('confirm_remove_avatar', default: 'Ви впевнені, що хочете видалити аватар?') },
                            class: "inline-flex items-center text-sm text-red-600 hover:text-red-700 font-medium transition-colors duration-200" do %>
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t('buttons.remove_avatar', default: 'Видалити аватар') %>
                <% end %>
              <% end %>
              <div class="w-full">
                <%= f.label :avatar, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
                  <%= t('activerecord.attributes.user.avatar', default: 'Аватар') %>
                <% end %>
                <label class="relative flex items-center justify-center w-full px-4 py-3 border-2 border-dashed border-slate-300 rounded-xl cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition-all duration-300 group">
                  <%= f.file_field :avatar, class: "hidden", accept: "image/*" %>
                  <div class="flex items-center space-x-2 text-slate-600 group-hover:text-blue-600 transition-colors duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                    </svg>
                    <span class="text-sm font-medium">
                      <%= t('buttons.choose_file', default: 'Вибрати файл') %>
                    </span>
                  </div>
                </label>
              </div>
            </div>
          </div>
          <!-- Form Fields -->
          <div class="space-y-5">
            <!-- Username -->
            <div class="form-field-wrapper">
              <%= f.label :username, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
              <%= f.input_field :username, 
                  required: true,
                  class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                  placeholder: t('activerecord.attributes.user.username_placeholder', default: 'Ваш нікнейм') %>
            </div>
            <!-- Email -->
            <div class="form-field-wrapper">
              <%= f.label :email, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
              <%= f.input_field :email,
                  required: true,
                  type: :email,
                  class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                  placeholder: "your@email.com" %>
            </div>
            <!-- First Name & Last Name Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div class="form-field-wrapper">
                <%= f.label :first_name, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :first_name,
                    required: true,
                    class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                    placeholder: t('activerecord.attributes.user.first_name_placeholder', default: "Ім'я") %>
              </div>
              <div class="form-field-wrapper">
                <%= f.label :last_name, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :last_name,
                    required: true,
                    class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                    placeholder: t('activerecord.attributes.user.last_name_placeholder', default: 'Прізвище') %>
              </div>
            </div>
            <!-- Preferred Categories -->
            <div class="form-field-wrapper">
              <label class="block text-sm font-semibold text-slate-700 mb-3">
                <%= t('activerecord.attributes.user.preferred_categories', default: 'Улюблені категорії') %>
              </label>
              <div class="bg-slate-50 rounded-xl p-4 border border-slate-200">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <% Category.all.order(:name).each do |category| %>
                    <label class="flex items-center space-x-3 p-3 rounded-lg hover:bg-white transition-colors duration-200 cursor-pointer group">
                      <%= check_box_tag 'user[preferred_category_ids][]', 
                          category.id,
                          @user.preferred_category_ids.include?(category.id),
                          class: "w-5 h-5 text-blue-600 border-slate-300 rounded focus:ring-2 focus:ring-blue-500 transition-all duration-200 cursor-pointer" %>
                      <span class="text-sm text-slate-700 font-medium group-hover:text-blue-600 transition-colors duration-200">
                        <%= category.name %>
                      </span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
            <!-- Pending Reconfirmation Notice -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="bg-amber-50 border-l-4 border-amber-500 p-4 rounded-r-lg">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-amber-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <p class="text-sm text-amber-800">
                    <%= t('devise.registrations.waiting_confirmation', default: 'Очікується підтвердження для') %>: 
                    <span class="font-semibold"><%= resource.unconfirmed_email %></span>
                  </p>
                </div>
              </div>
            <% end %>
            <!-- Password Section -->
            <div class="pt-6 border-t border-slate-200 space-y-5">
              <h3 class="text-lg font-bold text-slate-800 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                <%= t('activerecord.attributes.user.change_password', default: 'Зміна пароля') %>
              </h3>
              <div class="form-field-wrapper">
                <%= f.label :password, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :password,
                    autocomplete: "new-password",
                    class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                    placeholder: "••••••••" %>
                <p class="mt-1.5 text-xs text-slate-500">
                  <%= t('simple_form.labels.defaults.comment', default: 'Залиште порожнім, якщо не хочете змінювати') %>
                </p>
              </div>
              <div class="form-field-wrapper">
                <%= f.label :password_confirmation, class: "block text-sm font-semibold text-slate-700 mb-1.5" %>
                <%= f.input_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                    placeholder: "••••••••" %>
              </div>
              <div class="form-field-wrapper">
                <%= f.label :current_password, class: "block text-sm font-semibold text-slate-700 mb-1.5" do %>
                  <%= t('activerecord.attributes.user.current_password') %>
                  <span class="text-red-500">*</span>
                <% end %>
                <%= f.input_field :current_password,
                    required: true,
                    autocomplete: "current-password",
                    class: "w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white hover:border-slate-400",
                    placeholder: "••••••••" %>
                <p class="mt-1.5 text-xs text-slate-500">
                  <%= t('simple_form.labels.defaults.comment_password', default: 'Потрібен для підтвердження змін') %>
                </p>
              </div>
            </div>
          </div>
          <!-- Action Buttons --> <!-- TODO: change buttons!-->
          <div class="mt-8 pt-6 border-t border-slate-200 space-y-4">
            <button type="submit" class="w-full group relative flex items-center justify-center py-3.5 px-6 border-2 border-transparent rounded-xl font-semibold bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span><%= t("simple_form.button.update", default: 'Оновити профіль') %></span>
            </button>
            <div class="flex flex-col sm:flex-row gap-4">
              <%= link_to :back, class: "flex-1 flex items-center justify-center py-3.5 px-6 border-2 border-slate-300 rounded-xl text-slate-700 font-semibold bg-white hover:bg-slate-50 hover:border-slate-400 hover:text-slate-900 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-300" do %>
                <svg class="w-5 h-5 mr-2 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                <span><%= t("simple_form.button.back", default: 'Назад') %></span>
              <% end %>
              <%= link_to registration_path(resource_name),
                  data: { 
                    turbo_method: :delete, 
                    turbo_confirm: t("simple_form.labels.defaults.confirm", default: 'Ви впевнені? Цю дію не можна скасувати.') 
                  },
                  class: "flex-1 flex items-center justify-center py-3.5 px-6 border-2 border-red-200 rounded-xl text-red-600 font-semibold bg-white hover:bg-red-50 hover:border-red-500 hover:text-red-700 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-300" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                <span><%= t("simple_form.labels.defaults.cancel", default: 'Видалити акаунт') %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Footer Note -->
    <p class="text-center text-sm text-slate-500 mt-6">
      <%= t('activerecord.attributes.user.secure_notice') %>
    </p>
  </div>
</div>
