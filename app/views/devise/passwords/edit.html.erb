<div class="max-w-md mx-auto mt-12 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold text-gray-800 mb-4 text-center">
    <%= t('devise.passwords.edit.title', default: "Change your password") %>
  </h2>

  <% if flash.any? %>
    <div class="mb-4 space-y-2">
      <% flash.each do |key, value| %>
        <div class="rounded-lg p-4 text-sm <%= flash_class(key) %>" role="alert">
          <%= value %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.error_notification %>

    <div class="form-inputs space-y-4">
      <%= f.input :password,
          required: true,
          label: t('activerecord.attributes.user.password', default: "New password"),
          input_html: {
            autocomplete: "new-password",
            class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          },
          label: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

      <%= f.input :password_confirmation,
          required: true,
          label: t('activerecord.attributes.user.password_confirmation', default: "Confirm password"),
          input_html: {
            autocomplete: "new-password",
            class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          },
          label: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
    </div>

    <div class="form-actions mt-6">
      <%= f.button :submit, t('devise.passwords.edit.submit', default: "Change my password"),
          class: 'w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
