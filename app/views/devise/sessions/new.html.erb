<div class="max-w-md mx-auto mt-12 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold text-gray-800 mb-4 text-center"><%= t("devise.sessions.new.sign_in") %></h2>
  <% if flash.any? %>
    <div class="mb-4">
      <% flash.each do |key, value| %>
        <div class="rounded-lg p-4 text-sm text-gray-800 <%= flash_class(key) %>" role="alert">
          <%= value %>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }, data: { turbo: "false" },) do |f| %>
    <div class="form-inputs space-y-3">
      <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: {
          autocomplete: "email",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        },
        label: t('device.form.email') %>
      <%= f.input :password,
        required: false,
        input_html: {
          autocomplete: "current-password",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        },
        label: t("devise.form.password") %>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2">
          <%= f.input :remember_me,
            as: :boolean,
            label: t("devise.sessions.new.remember_me"),
            wrapper_html: { class: "flex items-center" },
            input_html: { class: "rounded border-gray-300 text-blue-600 shadow-sm focus:ring-blue-500" } %>
        </div>
      <% end %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, t("devise.sessions.new.sign_in"), class: "w-full bg-blue-600 hover:bg-blue-700 text-gray-800 text-sm font-semibold py-2 px-4 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
  <div class="mt-4 text-center text-sm text-gray-600 space-x-2">
    <%= link_to t("devise.shared.links.sign_up"), new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
    |
    <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(resource_name), class: "text-blue-600 hover:underline" %>
  </div>
</div>
