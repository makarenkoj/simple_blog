<div class="min-h-screen bg-white">
  <div class="bg-slate-50 py-20 border-b border-slate-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="w-20 h-20 bg-green-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg rotate-3 hover:rotate-0 transition-transform duration-300">
        <i class="ri-plant-line text-4xl text-white"></i>
      </div>
      <h1 class="text-4xl font-serif font-bold text-slate-900 sm:text-5xl mb-6">
        <%= t('about.title') %>
      </h1>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed">
        <%= t('about.subtitle') %>
      </p>
    </div>
  </div>
  <div class="py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg prose-slate mx-auto text-slate-600">
        <h3><%= t('about.mission.title') %></h3>
        <p><%= t('about.mission.body') %></p>
        <blockquote>
          <p><%= t('about.quote') %></p>
        </blockquote>
        <h3><%= t('about.story.title') %></h3>
        <p><%= t('about.story.body') %></p>
        <div class="mt-12 p-8 bg-green-50 rounded-2xl border border-green-100 not-prose text-center">
          <h3 class="text-2xl font-bold text-slate-900 mb-4"><%= t('about.join.title') %></h3>
          <p class="text-slate-600 mb-6"><%= t('about.join.body') %></p>
          <% unless user_signed_in? %>
            <%= link_to new_user_registration_path, class: "inline-block px-8 py-3 bg-slate-900 text-white font-medium rounded-full hover:bg-slate-800 transition-colors" do %>
              <%= t('activerecord.attributes.user.get_started') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
